{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "crons": [
    {
      "path": "/api/daily-summary",
      "schedule": "0 5 * * *"
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.dennis-tefett.de" }],
      "destination": "https://dennis-tefett.de/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/api/newsletter", "destination": "/api/newsletter" },
    { "source": "/api/contact", "destination": "/api/contact" },
    { "source": "/api/health", "destination": "/api/health" },
    { "source": "/api/booking", "destination": "/api/booking" },
    { "source": "/api/daily-summary", "destination": "/api/daily-summary" },
    { "source": "/api/analytics", "destination": "/api/analytics" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://dennis-tefett.de" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
        { "key": "Vary", "value": "Origin" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ]
}
